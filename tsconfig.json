{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "paths": {
      "actions/*": ["src/actions/*"],
      "components/*": ["src/components/*"],
      "reducers/*": ["src/reducers/*"],
      "selectors/*": ["src/selectors/*"],
      "sagas/*": ["src/sagas/*"],
      "theme/*": ["src/theme/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
